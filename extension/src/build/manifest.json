{
  "name": "Keepies",
  "description": "A memento of your app over time",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "identity",
    "alarms",
    "tabs",
    "downloads",
    "storage",
    "*://*.google.com/*",
    "*://*.github.com/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "ui.html"
  },
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  }
}
